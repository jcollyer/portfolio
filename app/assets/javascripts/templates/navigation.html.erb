<div id="nav">
  <div  class="job-item"
        ng-repeat="job in jobs"
        ng-mouseover="showJob(job)"
        ng-click="clickJob()">
    <ul>
      <li>{{job.title}}</li>
      <li>{{job.url}}</li>
    </ul>
    <div class="bottom"></div>
  </div>
</div>

