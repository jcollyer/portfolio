<%= form_for @job, :html => { :multipart => true } do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :show %><br>
    <%= f.check_box :show %>
  </div>
  <div class="field">
    <%= f.label :position %><br>
    <%= f.number_field :position %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>


  <div class="large-4 small-12 columns">
    <h3><%= f.label :icon %></h3>
    <%= f.file_field :icon %>
  </div>

  <div class="large-4 small-12 columns">
    <h3>Desktop</h3>
    <%= f.file_field :image %>
  </div>

  <div class="large-4 small-12 columns">
    <h3>Laptop</h3>
    <%= f.file_field :lap %>
  </div>

  <div class="large-4 small-12 columns">
    <h3><%= f.label :phone %></h3>
    <%= f.file_field :phone %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
